{
  "name": "deep-redact",
  "version": "1.0.0",
  "description": "A fast and configurable zero-dependency library for redacting strings or deeply redacting objects.",
  "private": false,
  "license": "MIT",
  "author": "Benjamin Green (https://bengreen.dev)",
  "keywords": [
    "redact",
    "redaction",
    "redactor",
    "redacting",
    "redacted",
    "secrets",
    "sensitive data",
    "sensitive information",
    "personal data",
    "personally identifiable information",
    "general data protection regulation",
    "data protection",
    "data security",
    "GDPR",
    "PII"
  ],
  "exports": {
    ".": {
      "import": "./dist/esm/index.js",
      "require": "./dist/cjs/index.js",
      "types": "./dist/esm/index.d.ts"
    }
  },
  "scripts": {
    "lint": "eslint",
    "build": "npm run lint && npm run test && npm run bench && npm run build:esm && npm run build:cjs && npm run update-readme && npm run update-license",
    "build:esm": "tsc --project tsconfig.esm.json",
    "build:cjs": "tsc --project tsconfig.cjs.json",
    "bench": "npx vitest bench --watch=false",
    "bench:dev": "npx vitest bench",
    "test:dev": "npx vitest",
    "test": "npx vitest run",
    "update-readme": "npx ts-node ./scripts/update-readme.ts",
    "update-license": "npx ts-node ./scripts/update-license.ts"
  },
  "//": [
    "fast-redact installed only as a benchmark comparison and is not used in the library",
    "all other dependencies are for development purposes only"
  ],
  "devDependencies": {
    "@memlab/core": "1.1.34",
    "@types/fast-redact": "3.0.4",
    "@types/node": "20.14.9",
    "@typescript-eslint/eslint-plugin": "7.14.1",
    "@typescript-eslint/parser": "7.14.1",
    "@vitest/coverage-v8": "1.6.0",
    "eslint": "8.57.0",
    "eslint-config-airbnb-base": "15.0.0",
    "eslint-config-airbnb-typescript": "18.0.0",
    "eslint-plugin-import": "2.29.1",
    "eslint-plugin-mocha": "10.4.3",
    "eslint-plugin-n": "17.9.0",
    "eslint-plugin-promise": "6.2.0",
    "fast-redact": "3.5.0",
    "prettier": "2.5.1",
    "typescript": "5.5.2",
    "vitest": "1.6.0"
  }
}
