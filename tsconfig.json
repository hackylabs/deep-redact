{
  "compilerOptions": {
    "lib": [
      "esnext"
    ],
    "target": "ES2015",
    "declaration": true,
    "declarationDir": "./dist/types",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "baseUrl": ".",
  },
  "include": ["src/**/*"],
}
