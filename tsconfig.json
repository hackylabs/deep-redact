{
  "compilerOptions": {
    "lib": [
      "esnext"
    ],
    "target": "ES2015",
    "declaration": true,
    "declarationDir": "./dist/types",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "moduleResolution": "NodeNext",
    "module": "NodeNext",
    "baseUrl": "."
  },
  "include": ["src/**/*"]
}
